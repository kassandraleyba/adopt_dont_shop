<p><%= @form.name =%>'s Application for Adoption<p>

<p><%= "Name of Applicant: #{@form.name}"%><p>
<p><%= "Street Address: #{@form.street_address}"%><p>
<p><%= "City: #{@form.city}"%><p>
<p><%= "State: #{@form.state}"%><p>
<p><%= "Zip Code: #{@form.zip_code}"%><p>

<p>Names of Pets: 
  <% @form.pets.each do |pet| %>
    <%=link_to pet.name, "/pets/#{pet.id}" %> 
    <% end %>
<p><%= "Application Status: #{@form.status}"%><p>

<% if @form.status == "In Progress" %>
  <%= form_with url: "/forms/#{@form.id}", method: :get, local: true do |f| %>
    <%= f.label :search, "Add A Pet To This Application" %>:
    <%= f.text_field :search %>
    <%= f.submit "Pet Submit" %>
  <% end %>
<% end %>

<% if @form.status == "Pending"%>
<% elsif @form.pets.size > 0  %>
   <%= form_with url: "/forms/#{@form.id}", method: :patch, local: true do |f| %>
    <%= f.label :description %>:
    <%= f.text_area :description, required: true %>
    <%= f.submit "Submit Application" %>
  <% end %>
<% end %>

<% if params[:search] %>
  <% @pet_search.each do |pet| %>
    <%= pet.name %> 
    <%= button_to "Adopt this Pet", "/forms/#{@form.id}/pet_forms", method: :post, params: {pet_id: pet.id} %>
  <% end %>
<% end%>